<div id="x_note_container">
  <h4>Notes</h4>
  <%= button_to "new", new_note_path(:note => { :notable_id => notable.id, :notable_type => notable.class.table_name.capitalize.singularize}), :remote => true, :method => :get %>
  <div id="x_new_note"></div>
  <ul>
    <% notable.notes.each do |note| %>
      <li><p><%= note %></p></li>
    <% end %>
  </ul>
</div>
